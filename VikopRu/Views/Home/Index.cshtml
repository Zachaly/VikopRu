@model MainPageViewModel

@foreach(var finding in Model.Findings)
{
    <div class="finding-mainpage">
        <div class="diggs-counter">
            @(finding.Diggs.Count - finding.Buries.Count)
        </div>

         @{
                var imgPath = $"/Findings/{finding.ImageName}";
                <img src="@imgPath">
         }

        <div class="finding-preview">
            <h4>
                <a asp-action="Finding" asp-controller="Home" asp-route-id="@finding.FindingId"> 
                    @finding.Title
                </a>
            </h4>

            <a href="@($"https://{finding.Link}")">@finding.Link</a>

            <div class="creator">
                @@@finding.Creator.UserName
            </div>
            <div>
                @finding.Created
            </div>
            <p>
                @finding.Description
            </p>
        </div>
    </div>
}